<resources>

    <!-- Base application theme. -->
    <style name="Theme.Bacon" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.Bacon.Toolbar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/theme_primary_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="Theme.Bacon.Backdrop" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="Theme.Bacon.Metabar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/detail_inner_horiz_margin</item>
        <item name="android:paddingRight">@dimen/detail_inner_horiz_margin</item>
        <item name="android:paddingTop">@dimen/detail_metabar_vert_padding</item>
        <item name="android:paddingBottom">@dimen/detail_metabar_vert_padding</item>
        <item name="android:layout_marginBottom">@dimen/detail_metabar_vert_padding</item>
    </style>

    <style name="Theme.Bacon.Detail.Body" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/detail_inner_horiz_margin</item>
        <item name="android:paddingRight">@dimen/detail_inner_horiz_margin</item>
        <item name="android:paddingTop">@dimen/detail_metabar_vert_padding</item>
        <item name="android:paddingBottom">@dimen/detail_metabar_vert_padding</item>
        <item name="android:layout_marginBottom">@dimen/detail_metabar_vert_padding</item>
    </style>

    <style name="Theme.Bacon.Detail.Fab" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_share</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:clickable">true</item>
    </style>

    </resources>





